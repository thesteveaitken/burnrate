<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-xs-4 col-md-3"><h1>Expenses</h1></div>
    
  <div class="col-xs-4 col-md-3"><%= link_to 'Add Expense', new_expense_path, class: "btn btn-heading btn-green" %></div>
    
</div><br> 


  

  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Date</th>
        <th>Amount</th>
        <th>Description</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @expenses.each do |expense| %>
        <tr>
          <td>
           <%= expense.date %>
             
           </td>
          <td><%= number_to_currency(expense.amount) %></td>
          <td><%= expense.description %></td>
          <td><%= expense.category %></td>
          <td><%= link_to 'View', expense, class: "btn btn-link" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  
